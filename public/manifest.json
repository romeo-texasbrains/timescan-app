{
  "name": "TimeScan",
  "short_name": "TimeScan",
  "description": "Internal employee attendance tracking application",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#000000",
  "orientation": "portrait",
  "id": "/",
  "scope": "/",
  "categories": ["business", "productivity", "utilities"],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "shortcuts": [
    {
      "name": "Scan QR Code",
      "short_name": "Scan",
      "description": "Scan a QR code to punch in/out",
      "url": "/scan",
      "icons": [{ "src": "/icons/txb icon-6.png", "sizes": "192x192" }]
    },
    {
      "name": "View History",
      "short_name": "History",
      "description": "View your attendance history",
      "url": "/history",
      "icons": [{ "src": "/icons/txb icon-6.png", "sizes": "192x192" }]
    }
  ],
